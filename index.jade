doctype html
//- basic libraries: jquery(1.10.2), d3js(3.3.11), angularjs(1.2.3), bootstrap(3.0)/semantic-ui(0.9.3/0.9.5)
- var usecdn = false
- var lib = { jquery: true, d3js: true, angular: true, bootstrap: true, semantic: false }
- var assets = "assets"
html
  head
    meta(charset="utf-8")
    title g0vis
    // libraries
    include library.jade
    // custom files
    link(rel="stylesheet",type="text/css",href="index.css")
    link(rel="stylesheet",type="text/css",href="assets/bootstrap/3.0.2/theme/bootstrap.yeti.min.css")
    script(type="text/javascript",src="assets/angular/1.2.3/angular-route.js")
    script(type="text/javascript",src="assets/moment/2.4.0/moment.min.js")
    script(type="text/javascript",src="assets/colorbrewer/colorbrewer.js")
    script(type="text/javascript",src="index.js")
  body(ng-app="g0vis", ng-controller="mainCtrl")
    .navbar.navbar-inverse.navbar-fixed-top
      .ib
        .navbar-header
          a.navbar-brand(href="#") G0VIS
        ul.nav.navbar-nav
          li(ng-repeat="n in tabs",ng-class="tabClass(n[0][0])")
            a(ng-attr-href="#!/{{n[0][0]}}",ng-if="n[1].length==0") {{n[0][1]}}
            a.dropdown-toggle(href="#",data-toggle="dropdown",ng-if="n[1]",target="_self")
              | {{n[0][1]}}
              .caret
            ul.dropdown-menu(ng-if="n[1]")
              li(ng-repeat="x in n[1]"): a(ng-attr-href="#!/{{n[0][0]}}/{{$index}}") {{x}}
        ul.nav.navbar-nav.navbar-right
          li: a(href="#")
            i.glyphicon.glyphicon-check
            |  沒有人
          li.dropdown
            a.dropdown-toggle(href="#",data-toggle="dropdown"): i.glyphicon.glyphicon-cog
            ul.dropdown-menu
              li: a(href="#")
                i.glyphicon.glyphicon-cog(style="float:right")
                | 沒有人的設定
              li.divider
              li: a(href="#")
                i.glyphicon.glyphicon-log-out(style="float:right")
                | 沒有人要登出
    div(ng-view)
    //-
      #content
        #about(ng-show="tab=='about'")
        include project.jade
        include irc.jade
